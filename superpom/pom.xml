						<artifactId>jdepend-maven-plugin</artifactId>
						<version>2.0</version>
					</plugin>
					<!-- Code coverage. It is slow, and there is no good reason to run it all the time.
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>cobertura-maven-plugin</artifactId>
						<version>2.7</version>
					</plugin>
					-->
